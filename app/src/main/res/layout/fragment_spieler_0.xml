<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@color/bluegrey_600"
              style="?attr/buttonBarButtonStyle">

	<ImageButton
		android:id="@+id/dj_previous"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		style="?attr/buttonBarButtonStyle"
		android:src="@drawable/ic_skip_previous_black_48dp"
		android:scaleType="fitCenter"
		android:onClick="onClick"/>
	<ImageButton
		android:id="@+id/dj_stop"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		style="?attr/buttonBarButtonStyle"
		android:src="@drawable/ic_stop_black_48dp"
		android:scaleType="fitCenter"
		android:onClick="onClick"/>
	<ImageButton
		android:id="@+id/dj_play"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		style="?attr/buttonBarButtonStyle"
		android:src="@drawable/ic_play_arrow_black_48dp"
		android:scaleType="fitCenter"
		android:onClick="onClick"/>
	<ImageButton
		android:id="@+id/dj_repeat"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		style="?attr/buttonBarButtonStyle"
		android:src="@drawable/ic_no_repeat_black_48dp"
		android:scaleType="fitCenter"
		android:onClick="onClick"/>
	<ImageButton
		android:id="@+id/dj_next"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		style="?attr/buttonBarButtonStyle"
		android:src="@drawable/ic_skip_next_black_48dp"
		android:scaleType="fitCenter"
		android:onClick="onClick"/>
</LinearLayout>